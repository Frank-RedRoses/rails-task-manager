<h1><%= @task.title %></h1>
<div>
  <%= @task.details %>
</div>
<div>
  <input type="checkbox" id="<%= @task.title %>" <%= @task.completed ? "checked" : "" %>>
  <label><%= @task.completed ? "This task is completed" : "This task is not completed" %></label>
</div>
<div>
  <p><%= link_to 'Back to the list', tasks_path %></p>
</div>
